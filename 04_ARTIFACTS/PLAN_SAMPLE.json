{
  "device": "/dev/placeholder",
  "esp_mb": 256,
  "boot_mb": 512,
  "passphrase_file": "<path-or-null>",
  "flags": {
    "plan": true,
    "dry_run": true,
    "do_postcheck": false,
    "tpm_keyscript": false,
    "assume_yes": false,
    "skip_rsync": false
  },
  "steps": [
    "safety.pre_cleanup",
